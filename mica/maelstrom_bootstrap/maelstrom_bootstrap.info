name = Maelstrom Bootstrap Sub-theme
description = Maelstrom Obiba : a Bootstrap Sub-theme.
core = 7.x
base theme = obiba_bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;
regions[facets]         = 'Facets'
regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'
regions[page_top]       = 'Page top'
regions[page_bottom]    = 'Page bottom'


; Navbar
; --------------
settings[bootstrap_navbar_position] = 'fixed-top'
settings[bootstrap_navbar_inverse] = 0

; Global
; --------------
settings[toggle_logo] = 1
settings[toggle_name] = 0
settings[toggle_search] = 0
settings[toggle_slogan] = 0
settings[toggle_node_user_picture] = 0
settings[toggle_comment_user_picture] = 0
settings[toggle_comment_user_verification] = 0
settings[toggle_comment_user_verification] = 0
settings[toggle_favicon] = 0
settings[toggle_main_menu] = 1
settings[toggle_secondary_menu] = 0

;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;
stylesheets[all][] = css/style.css
stylesheets[all][] = css/custom.css

stylesheets[all][] = plugins/font-awesome/css/font-awesome.min.css
stylesheets[all][] = plugins/revolution-slider/rs-plugin/css/settings.css
;stylesheets[all][] = plugins/owl-carousel/owl-carousel/owl.carousel.css
;stylesheets[all][] = plugins/layer-slider/layerslider/css/layerslider.css

